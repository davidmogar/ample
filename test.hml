    <link rel="stylesheet" type="text/css" href="css/ample.min.css">
    <script type="text/javascript" src="js/prettify/prettify.js"></script>
    <style>
    .column, .columns {
      background-color: #e6e6e6;
      min-height: 2em;
      margin-bottom: 1rem;
    }
    .row .row [class*="column"]:last-child {
      margin-bottom: 0;
    }
    .two.columns {
      background-color: #2979ff;
    }
